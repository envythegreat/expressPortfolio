extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1 #{myinfo.fullName}
        p.lead.text-light
          | Web Developer.
        .portfolio-bio
          p 
            | #{myinfo.description}
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Skills
        ul
          each Skill in myinfo.skills
            li= Skill
        h6 Contact Info
        ul
          each info in myinfo.contact
            li= info
        a.button.expanded(href='#') LinkedIn
        a.button.expanded(href=`${myinfo.media.Github}` target='_blank') GitHub
        a.button.expanded(href='#') Twitter
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  